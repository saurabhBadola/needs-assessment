<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AccentButton" parent="Widget.AppCompat.Button.Small">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/background_rounded_accent_color</item>
    </style>

    <style name="BottomBlueButton">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:background">@color/colorAppBlue</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CardRoundedBottomBlueButton">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:background">@drawable/drawable_rounded_bottom_card_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditTextGreyBackground">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/background_rounded_grey</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="BlackTextStyle16">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewItemWarning">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/background_rounded_warning</item>
    </style>

    <style name="TextViewItemSuccess">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/background_rounded_success</item>
    </style>

    <style name="SmallTitle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#555</item>

    </style>

</resources>
